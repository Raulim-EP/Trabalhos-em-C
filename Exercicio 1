#include <stdio.h>

int qtd, escolha, total;
float resultado, valor, vendtot, maior;
char produto[100];

int main(){
    
    
    while(1){
        printf("\nDeseja continuar: (1)sim (2)nao\nEscolha:");
        scanf("%d", &escolha);
        if(escolha == 2){
            break;
        }
        printf("\nInforme o produto:");
        scanf("%s", produto);
        printf("\nQuantidade de produtos vendidos:");
        scanf("%d", &qtd);
        printf("\nInsira o valor do produto: ");
        scanf("%f", &valor);
        total += qtd;
        resultado = valor * qtd;
        if(valor > maior){
            maior = valor;
        }
        vendtot += resultado;
        printf("Valor total da venda de %s : %.2f", produto, resultado);
    }
        printf("Itens totais vendidos %d\nValor do maior produto vendido:%.2f \nVendas totais %.2f", total, maior, vendtot);
    return 0;
}
